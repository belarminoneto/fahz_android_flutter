<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/container_scholarship">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp"
            android:columnCount="3">

            <LinearLayout
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingRight="10dp"
                android:id="@+id/layout_request">

                <ImageButton
                    android:id="@+id/btnRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_main_action"
                    app:srcCompat="@drawable/ic_campanha" />

                <TextView
                    android:id="@+id/lblRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/request"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    app:fontFamily="@font/opensans_semibold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:gravity="center"
                android:id="@+id/layout_refund">
                <ImageButton
                    android:id="@+id/btnRefund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_main_action"
                    app:srcCompat="@drawable/ic_money" />

                <TextView
                    android:id="@+id/lblRefund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/refund"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    app:fontFamily="@font/opensans_semibold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_followup"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnCourseFollowup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_main_action"
                    app:srcCompat="@drawable/ic_acompanhamento" />

                <TextView
                    android:id="@+id/lblCourseFollowup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/coursefollowup"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    app:fontFamily="@font/opensans_semibold" />
            </LinearLayout>


        </GridLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>