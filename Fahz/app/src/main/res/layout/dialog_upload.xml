<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/newTypeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/txtNewType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/chooseTypeDocument"
            app:fontFamily="@font/opensans_bold"/>
        <Spinner
            android:id="@+id/typedocument_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNewType"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/dialog_text_gallery"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:theme="@style/ThemeSpinner"/>


    </RelativeLayout>

    <View
        android:id="@+id/separatorNewType"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_light"
        android:layout_margin="10dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/viewGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/txtGalleryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/dialog_gallery"
            app:fontFamily="@font/opensans_extrabold"/>
        <TextView
            android:id="@+id/txtGalleryDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtGalleryTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/dialog_text_gallery"
            app:fontFamily="@font/opensansregular"/>
        <ImageView
            android:id="@+id/imgGalleryButtom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_file_upload"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_light"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:id="@+id/viewCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/txtCameraTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/dialog_camera"
            app:fontFamily="@font/opensans_extrabold"/>
        <TextView
            android:id="@+id/txtCameraDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCameraTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/dialog_text_photo"
            app:fontFamily="@font/opensansregular"
            />
        <ImageView
            android:id="@+id/imgCameraButtom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_camera"/>
    </RelativeLayout>


</LinearLayout>