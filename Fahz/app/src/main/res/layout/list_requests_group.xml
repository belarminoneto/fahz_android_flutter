<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white01"
    android:orientation="horizontal"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/request_padding">

            <TextView
                android:id="@+id/request_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inclusão de Filho ao Plano de Saúde: HUGO LANDIM"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_size"
                app:fontFamily="@font/opensans_bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/request_padding">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_calendar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/message_margin_left"
                android:text="@string/request_date"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/text_size_medium"
                app:fontFamily="@font/opensans_semibold" />

            <TextView
                android:id="@+id/request_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/message_margin_left"
                android:text="@string/initialPage"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/text_size_medium"
                app:fontFamily="@font/opensans_semibold" />


        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/request_padding"
            android:paddingLeft="@dimen/request_padding"
            android:paddingTop="@dimen/request_padding">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_pending" />

            <TextView
                android:id="@+id/status_request_approved"
                style="@style/ThemeApprovedRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/message_margin_left"
                android:padding="@dimen/request_padding_text"
                android:text="@string/approved_request" />

            <TextView
                android:id="@+id/status_request_pending"
                style="@style/ThemePendingRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/message_margin_left"
                android:padding="@dimen/request_padding_text"
                android:text="@string/pending_request" />

            <TextView
                android:id="@+id/status_request_disapproved"
                style="@style/ThemeDisapprovedTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/message_margin_left"
                android:padding="@dimen/request_padding_text"
                android:text="@string/disapproved_request" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:srcCompat="@drawable/see_more_arrow" />


    </LinearLayout>


</LinearLayout>