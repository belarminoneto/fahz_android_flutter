<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundDefault"
        android:id="@+id/informativeToken">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@color/grey_dark"
                android:text="@string/registration_validation"
                android:textColor="@color/white_text"
                android:textAllCaps="true"
                app:fontFamily="@font/opensans_bold"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/initial_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/validation_initial"
                android:layout_below="@+id/title"
                android:padding="12dp"
                android:textSize="@dimen/default_medium_margin"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/initial_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/steps_title"
                android:layout_below="@+id/initial_description"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textSize="@dimen/default_medium_margin"/>

            <TextView
                android:id="@+id/step_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/step_1"
                android:layout_below="@+id/initial_steps"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/default_medium_margin" />

            <TextView
                android:id="@+id/step_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/step_2"
                android:layout_below="@+id/step_1"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/default_medium_margin"/>

            <TextView
                android:id="@+id/step_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/step_3"
                android:layout_below="@+id/step_2"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/default_medium_margin"/>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/step_3"
                android:layout_marginTop="15dp">

            <View android:id="@+id/rectangle_new"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/blueHeader"
                android:visibility="visible"/>

                <com.codesgood.views.JustifiedTextView
                    android:id="@+id/problem_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/step_descrition_problem"
                    android:layout_below="@+id/step_3"
                    android:padding="4dp"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/okButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="12dp"
                    android:text="@string/ok"
                    android:textColor="@color/white_text"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_enter"
                    app:fontFamily="@font/opensansregular" />
            </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>