<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuGroupLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <RadioButton
        android:id="@+id/radioSelectedParcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RadioButton"/>

    <TextView
        android:id="@+id/monthDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="70dp"
        android:paddingLeft="70dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Fevereiro/2019"
        android:background="@drawable/round_blue_button"
        android:layout_margin="10dp"
        android:textColor="@color/white04"
        app:fontFamily="@font/opensans_bold"
        android:textSize="@dimen/text_size_financial_item"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/pending_refund_request"
        android:background="@drawable/round_dark_yellow_button"
        android:textColor="@color/white04"
        app:fontFamily="@font/opensans_bold"
        android:textSize="@dimen/text_size_small"/>

    <TextView
        android:id="@+id/lblCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refund_value"
        android:layout_marginTop="10dp"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/text_size"
        app:fontFamily="@font/opensansregular"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/refund_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$350,00"
        android:textColor="@color/blueHeader"
        android:textSize="@dimen/text_size"
        app:fontFamily="@font/opensans_bold"
        android:layout_gravity="left"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_refund_value"
        android:textColorHint="@color/grey_dark"
        android:textSize="@dimen/text_size_medium">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/value_refund_edit_text"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontFamily="@font/opensans_semibold"
            android:textSize="@dimen/text_size_medium"
            android:inputType="numberDecimal"
            android:digits="0123456789.," />

    </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>

