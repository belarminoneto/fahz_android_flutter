<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    android:orientation="vertical"
    tools:context=".activities.benefits.toy.RequestNewToyActivity">

    <TextView
        android:id="@+id/txtRequestDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/grey_dark"
        android:padding="15dp"
        android:text="@string/request_new_toy_description"
        android:textAllCaps="true"
        android:textColor="@color/white01"
        android:textSize="@dimen/text_size_small"
        app:fontFamily="@font/opensans_bold" />


    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mDependentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnSave"
        android:layout_below="@id/txtRequestDescription"
        android:background="@color/backgroundDefault"
        android:focusable="true"
        android:focusableInTouchMode="true">

    </androidx.recyclerview.widget.RecyclerView>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/button_save"
        android:textColor="@color/white_text"
        android:background="@color/blue_dark"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>